@using Lms.MVC.UI.Views.Shared.Components.UploadFile
@model FileInfo

<form id="uploadForm" asp-action="UploadDatabase" asp-controller="Files" method="post"
      enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;">
    <dl>
        <dt>
            <label for="note">Description</label>
        </dt>
        <dd>
            <input id="description" type="text" name="description" />
        </dd>
        <dt>
            <label for="file">File</label>
        </dt>
        <dd>
            <input id="file" type="file" name="file" />
        </dd>        
    </dl>

    <input class="btn btn-outline-light" type="submit" value="Upload" />
    <div style="margin-top:15px">
        <output form="uploadForm" name="result"></output>
    </div>
    <input type="hidden" name="CMAType" value="@Model.CMAType" />
    <input type="hidden" name="CMAId" value="@Model.Id" />
    <input type="hidden" name="UserId" value="@Model.userId" />
</form>

<script src="~/Components/UploadFile/js/site.js"></script>
